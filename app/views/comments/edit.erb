<!-- HEADER BREADCRUMBS -->

<div class="container-fluid category-title">
    <div class="row">
        <div class ="col-8">
            <nav aria-label="breadcrumb customnav">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/categories/<%= @category.title %>/posts"><%= @category.title.capitalize %></a></li>
                </ol>
            </nav>
        </div> <!-- close .col -->

        <div class=col-4 ml-1">
            <form action="/categories/<%= @category.title %>/posts/new"> <input type="submit" class="postbutton" value="New Post"> </form>
        </div> <!-- close .col -->
    </div> <!-- close .row -->
</div> <!-- close .container -->

<section class="flashmessage"><%= flash[:message] %></section>

<!-- ORIGINAL COMMENT DISPLAY -->

<div class="container comments top-post">
    <div class="row">
        <h5>Original Comment: </h5>
        <div class="col-sm-8 offset-sm-2 col-md-8 offset-md-2 col-lg-8 offset-lg-2">
                <div class="col-lg-12 col-md-12">
                    <div class="comment"> 
                        <div class="top-wrap"> 
                            <div class="user-info pull-left">
                                <div class="avatar">
                                    <p><img src="../images/no-photo.png" class="align-self-center mr-2"></p>
                                    <p><form><input type="button" value="+1" class="like-button align-self-center mr-2"> <%=@comment.score%></form></p>
                                </div> <!-- close .avatar -->
                            </div> <!-- close .user-info -->
                
                            <div class="comment-info pull-left">
                                <p><span class="w-auto"><%=(User.find(@comment.user_id)).username%>:</span></p>
                                <p><span><%=@comment.content%></span></p> 
                                <p><span class="comment-footer">Posted at <%= @comment.created_at %></span></p>
                            </div> <!-- close .comment-info -->
                        </div> <!-- close .top-wrap -->
                    </div> <!-- close .comment -->
                </div> <!-- close .col -->
        </div> <!-- close .col-sm -->
    </div> <!-- close .row -->
</div> <!-- close.container-posting -->

<!-- EDIT COMMENT -->

<section>
    <div class="container">
        <form action="/categories/<%= @category.title %>/posts/<%= @post.id %>/comments/<%= @comment.id %>" method="post">
            <input id="hidden" type="hidden" name="_method" value="patch">
            <div class="container new-comment">
                    <div class="form-group">
                        <label for="content" id="comment-label">Edit Your Comment:</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="comment[content]" rows="3" placeholder="<%= @comment.content %>"></textarea>
                    </div>

                    <input type="submit" class="btn btn-primary" id="comment-reply-button">
            </div> <!-- close .container -->
        </form>

        <!-- DELETE BUTTON -->

        <form action="/categories/<%= @category.title %>/posts/<%= @post.id %>/comments/<%= @comment.id %>/delete" method="post">
            <input id="hidden" type="hidden" name="_method" value="delete">
            <input type="submit" class="btn btn-primary" id="comment-delete-button" value="Delete">
        </form>
    </div> <!-- close .container -->
</section>

