    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel='icon' href='favicon.ico' type='image/x-icon' sizes="16x16" />
    
  </head>
  <body>
    <div class="container-fluid my-nav">
      <div class="row">
        <div class="col-sm-12 top-nav-bar">
          <nav class="navbar navbar-expand-sm navbar-light top-of-page">
            <a class="navbar-brand" href="/">FOODIE FINDS</a>
          
            <!-- account links -->
            <% if logged_in %>
              <ul class="nav navbar-nav ml-auto w-100 justify-content-end">   
                <li class="nav-item dropdown dropmenu">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <%= current_user.username %>
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="/users/profile/<%= current_user.id %>">My Profile</a>
                    <a class="dropdown-item" href="/users/logout">Log Out</a>
                  </div>
                </li>                     
              </ul>
            <% else %>
              <ul class="nav navbar-nav ml-auto w-100 justify-content-end">   
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Join In
                  </a>
                  <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="/users/login">Log In</a>
                    <a class="dropdown-item" href="/users/signup">Sign Up</a>
                  </div>
                </li>                     
              </ul>
            <% end %>
          </nav>
        </div> <!-- close .col -->
      </div> <!-- close .row -->
    </div> <!-- close .container -->

    <div class="wrapper">

        <%= yield %>

  
    <footer class="branding fixed-bottom">
      <small>&copy; 2018 <strong>FoodieFinds</strong></small>
    </footer>

    </div>
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
