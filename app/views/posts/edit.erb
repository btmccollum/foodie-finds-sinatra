<div class= "container top-post">
    <div class= "row">
        <div class="col-sm-10 offset-sm-1 col-md-10 offset-md-1 col-lg-10 offset-lg-1">
            <div class="container post">
                <div class="row">
                    <div class="col-3 user-info pull-left align-self-center">
                        <div class="avatar">
                            <img src="../images/no-photo.png" class="align-self-center mr-2">
                            <p><%= (User.find(@post.user_id)).username %></p>
                            <form><input type="button" value="+1" class="like-button align-self-center mr-2"> <%= @post.score %></form>
                        </div>
                    </div>
                    
                    <div class="col-9 post-info pull-left">
                        <div class="post-title">
                            <section><%= @post.city.capitalize %> / <%= @post.title %></section>
                            <section><%= @post.location %></section>
                        </div>
                        <p><%= @post.content %></p>    
                        <section class="post-footer">Posted at <%= @post.created_at %></section>
                    </div>
                    
                    <div class="postbottom">

                        <div class="clearfix">
                        
                        </div>
                    </div>
                </div> <!-- close .row -->
            </div> <!-- close .container -->
        </div> 
    </div> <!-- close .row -->
</div> <!-- close .container -->

<form action="/categories/<%= @category.title %>/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
        <div class="container new-post">
        
                <h5>Editing your post in <%=@category.title.capitalize%></h5>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" placeholder="<%= @post.title %>">
                </div>

                <div class="form-group">
                    <label for="exampleFormControlInput1">City</label>
                    <input type="text" class="form-control" name="city" placeholder="<%= @post.city %>">
                </div>

                <div class="form-group">
                    <label for="location">Location</label>
                    <input type="text" class="form-control" name="location" placeholder="<%= @post.location %>">
                </div>

                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" name="content" rows="3" placeholder="<%= @post.content %>"></textarea>
                </div>

                <input type="submit" class="btn btn-primary">
            </form>
       
    </div> <!-- close .container -->
</form>